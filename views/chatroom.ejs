<%- include('header'); %>
    <!-- middle area -->
    <div class="row">
        <div class="col-md-8">

            <div class="panel panel-primary" id="chatroom-panel">
                <div class="panel-heading">
                    <h3 class="panel-title" id="room-title"></h3>
                </div>
                <div class="panel-body" id="chat-box-body">


                    <ul class="list-group" id="chat-box">
                
                    </ul>
                    <div id="chat-input">
                        <input type="hidden" id="sendUsername" value="" name=username>
                        <input type="hidden" id="sendChatroomName" value="<%= postdata.roomname %>" name=chatroomName>
                        <input class="form-control" placeholder="Type your message..." type="text" name="sendMsgTxt" id="sendMsgfield">
                        <button id="sendMsgButton">Send</button>
                    </div>
                    <div id="status-messages">
                        <strong><span id="status-text"></span></strong>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">

            <ul class="list-group chatroom-sidebar">
                <div class="panel panel-danger" id="chatroom-panel">
                    <div class="panel-heading" id="conference-options-panel">
                        <h3 class="panel-title">Conferencing Options</h3>
                    </div>
                    <div class="panel-body">
                        <div id="audio-conference-panel list-group-item">
                        <span class="btn btn-danger">Audio Chat</span>
                                <input name="optionsRadios" id="audio-chat-on" value="option1" type="radio" />ON
                                <input name="optionsRadios" id="audio-chat-off" value="option2"  checked="" type="radio" /> OFF
                        </div>
                    </div>
                </div>


            </ul>
        </div>
    </div>
    <!-- middle area end -->
    <audio  id="gum-local"  autoplay></audio>

    <% include footer %>
